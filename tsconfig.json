{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "lib": ["es2021"],
      "noImplicitAny": true,
      "strict": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
          "*": [
            "node_modules/*",
            "src/types/*"
          ]
      }
  },
  "include": [
      "src/**/*"
  ]
}
